1.zookeeper
  a. update myid
  vim /var/lib/zookeeper/myid 1 2 3
  b. update /etc/zookeeper/conf/zoo.cfg
  vim /etc/zookeeper/conf/zoo.cfg
  #add content like
  server.1=10.10.31.121:2888:3888
  server.2=10.10.14.94:2888:3888
  server.3=10.10.44.129:2888:3888
  c. start service
  /usr/share/zookeeper/bin/zkServer.sh start-foreground &
2.master
  a. update config
  # update zk config
  echo "zk://10.10.44.129:2181,10.10.14.94:2181,10.10.31.121:2181/mesos" > /etc/mesos/zk
  echo 2 > /etc/mesos-master/quorum
  echo `hostname -I` > /etc/mesos-master/ip
  echo `hostname -I` > /etc/mesos-master/hostname
  echo "DataMan" > /etc/mesos-master/cluster
  b. start service 
  start mesos-master
3.marathon
  mkdir -p  /etc/marathon/conf
  cd /etc/marathon/conf/
  echo "zk://10.10.44.129:2181,10.10.14.94:2181,10.10.31.121:2181/marathon" > zk
  echo `hostname -I` > hostname
  echo "zk://10.10.44.129:2181,10.10.14.94:2181,10.10.31.121:2181/mesos" > master

  restart marathon

4.chronos
  restart chronos
3. slave
  echo "docker,mesos" > /etc/mesos-slave/containerizers
  echo "cgroups/cpu,cgroups/mem" > /etc/mesos-slave/isolation
  echo `hostname -I` > /etc/mesos-slave/ip
  echo `hostname -I` > /etc/mesos-slave/hostname
  echo "zk://10.10.44.129:2181,10.10.14.94:2181,10.10.31.121:2181/mesos" > /etc/mesos/zk
  restart mesos-slave

